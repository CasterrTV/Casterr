{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run",
      "dependsOn": [
        // "Build API",
        "Run Client App"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "Run Client App",
      "command": "npm run electron:serve --prefix Casterr",
      "type": "shell",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build API",
      "command": "dotnet publish -c debug --output ./Casterr/bin/api --no-self-contained ./Casterr.API/Casterr.API.csproj",
      "type": "shell",
      "problemMatcher": "$msCompile"
    }
  ]
}
