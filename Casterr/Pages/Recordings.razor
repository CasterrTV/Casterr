@page "/recordings"

<div class="recordingsContainer">
  <div class="thumbContainer">
    @foreach (var v in RecorderLib.Recordings.Get())
    {
      <div class="thumb">
        <div class="inner">
          @if (v.ThumbPath != null)
          {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(System.IO.File.ReadAllBytes(v.ThumbPath))" alt="" />
          }
          else
          {
            <span class="noThumb">No Thumbnail Found</span>
          }

          <div class="info">
            <div class="bar">
              <span class="title">Trock Dioes</span>

              <div class="videoInfo">
                <span>@v.Duration Min</span>
                <span>@v.FileSize.ToReadableFileSize()</span>
              </div>
            </div>

            <span class="edit">
              <Icon i="edit" />
            </span>
          </div>
        </div>
      </div>
    }
  </div>
</div>
