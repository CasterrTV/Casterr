{
  "executable": "Casterr",
  "name": "Casterr",
  "description": "Best way to record your clips.",
  "author": {
    "name": "CasterrTV"
  },
  "homepage": "https://github.com/CasterrTV/Casterr",
  "license": "GPL-3.0",
  "splashscreen": {
    "imageFile": ""
  },
  "singleInstance": false,
  "build": {
    "appId": "com.Casterr.app",
    "productName": "Casterr",
    "copyright": "Copyright Â© 2020 CasterrTV",
    "buildVersion": "0.1.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [
          "**/*"
        ]
      },
      "**/*"
    ],
    "linux": {
      "icon": "bin/wwwroot/icon.png",
      "category": "Utility",
      "desktop": {
        "Name": "Casterr",
        "GenericName": "Screen Recorder",
        "Comment": "Easy video recording and sharing",
        "Type": "Application",
        "Terminal": "false"
      }
    },
    "win": {
      "icon": "bin/wwwroot/icon.ico"
    }
  }
}
