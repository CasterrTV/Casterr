@inject StatusService statusService

<nav>
    <ul>
        <li>
            <NavLink href="recordings">
                <Icon i="play" />
                <span>Recordings</span>
            </NavLink>
        </li>
        <li>
            <NavLink href="uploads">
                <Icon i="upload" />
                <span>Uploads</span>
            </NavLink>
        </li>
        <li>
            <NavLink href="settings">
                <Icon i="settings" />
                <span>Settings</span>
            </NavLink>
        </li>
        <li>
            <NavLink href="profile">
                <Icon i="play" />
                <span>Profile</span>
            </NavLink>
        </li>
        <li id="status">
            <span id="timeElapsed" class="@statusService.ElapsedClass">15:50</span>
            <div class="circle @statusService.CircleClass"></div>
        </li>
    </ul>
</nav>

<button @onclick="@(() => statusService.ChangeStatus(1))">One - Nav</button>

@code {
    protected override void OnInitialized()
    {
        statusService.ShouldChangeState += UpdateState;
    }

    private void UpdateState()
    {
        InvokeAsync(() =>
        {
            StateHasChanged();
        });
    }
}