<div class="dropDownContainer">
    <label>@Placeholder</label>
    <ul>
        @foreach (var item in @Items)
        {
            <li>@item</li>
        }
    </ul>
</div>

@code {
    [Parameter]
    public string[] Items { get; set; }

    public string Placeholder;

    protected override void OnInitialized()
    {
        Placeholder = Items.First();
    }
}
